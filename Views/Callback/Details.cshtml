@model Rolled_metal_products.Models.CallbackRequest

@{
    ViewData["Title"] = "Детали звонка";
}


<style>

    .btn-block {
        padding: 0px 5px 0px 5px;
    }

        .btn-block .btn {
            padding: 9px 10px 9px 10px;
        }
</style>



    <div class="backgroundWhite container">
        <div class="card">


            <div class="card-header container row p-3" style="margin-left:0; background:transparent">
                <div class="col-6 align-items-center justify-content-center">
                    <h3 class="text-primary fw-bold mb-0" style="margin-top: 3px;">Детали звонка</h3>
                </div>
                <div class="col-6 text-end">
                    <a href="@Url.Action("AdminListCallbacks", "Callback")" class="btn btn-primary shadow btn-sm">Назад</a>
                </div>
            </div>

            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div>
                            <div class="row my-1 mb-3">
                                <div class="col-3">Имя</div>
                                <div class="col-9">
                                <input value="@Model.Name" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1 mb-3">
                                <div class="col-3">Телефон</div>
                                <div class="col-9">
                                <input value="@Model.PhoneNumber" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1 mb-3">
                                <div class="col-3">Телефон</div>
                                <div class="col-9">
                                <input value="@Model.Email" readonly type="text" class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1 mb-3">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                <textarea type="text" readonly class="form-control">@Model.Text</textarea>
                                </div>
                            </div>
                            <div class="row my-1 mb-5">
                                <div class="col-3">Дата запроса</div>
                                <div class="col-9">
                                    <input value="@Model.Date.ToString("g")" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>









