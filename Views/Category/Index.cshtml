@model IEnumerable<Rolled_metal_products.Models.Category>

@{
    ViewData["Title"] = "Категории";
}

<style>
    .btn-create{
        text-align: center;
        line-height: 30px;
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список категорий</h2>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a class="btn btn-primary btn-create" asp-action="Create" asp-controller="Category">
                <i class="fa-solid fa-plus"></i>&nbsp; Добавить категорию
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td width="50%">
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }
</div>