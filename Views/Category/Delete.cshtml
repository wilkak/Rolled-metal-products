@model Rolled_metal_products.Models.Category

@{
    ViewData["Title"] = "Удаление категории";
}
<style>
    .form-group {
        padding: 10px;
    }

    .param-input {
        margin-bottom: 20px;
    }

    .btn-delete-parametr {
        border-radius: 0 1rem 1rem 0;
    }

    .btn-block {
        padding: 0px 5px 0px 5px;
    }

        .btn-block .btn {
            padding: 9px 10px 9px 10px;
        }
</style>

<style>
    .custom-img {
        width: 70%;
        border-radius: 5px;
        border: 1px solid #bbb;
        height: fit-content;
    }
</style>

<form asp-action="DeletePost">
    <div class="container py-3">
        <input asp-for="Id" hidden></input>
        <div class="p-3">
            <div class="form-group row">
                <h2 class="text-info pl-3 fw-bold">Удаление категории</h2>
            </div>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12 col-md-8 order-2 order-md-1 mb-3">
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-12 col-md-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 col-md-4">
                            <label asp-for="DisplayOrder"></label>
                        </div>
                        <div class="col-12 col-md-8">
                            <input asp-for="DisplayOrder" class="form-control" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4 p-4 order-1 order-md-2 d-flex justify-content-center">
                    @if (Model.ImageName == null)
                    {
                        <img id="imagePreview" src="@WC.NoImagePath" class="custom-img" />
                    }
                    else
                    {
                        <img id="imagePreview" src="@WC.ImagePathCategory@Model.ImageName" class="custom-img" />
                    }
                </div>
                <div class="col-12 col-md-8 order-3">
                    <div class="row justify-content-end">
                        <div class="col-12 col-md-8 d-flex flex-row">
                            <div class="col-6 btn-block">
                                <input type="submit" value="Удалить" class="btn btn-danger w-100" />
                            </div>
                            <div class="col-6 btn-block">
                                @if (Model.ParentId != null)
                                {
                                    <a class="btn btn-info w-100" asp-action="Details" asp-controller="Category" asp-route-id="@Model.ParentId">
                                        <i class="fas fa-sign-out-alt"></i> Назад
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Index" class="btn btn-info w-100">
                                        <i class="fas fa-sign-out-alt"></i> Назад
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}


