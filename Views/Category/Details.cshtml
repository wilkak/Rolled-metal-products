@model Rolled_metal_products.Models.ViewModels.CategoryDetailsVM
@{
    ViewData["Title"] = "Детали категории";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" style="margin-bottom: 50px;">Информация о категории</h2>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><strong>Название:</strong> @Model.Category.Name</p>
                    <p class="card-text"><strong>Цена:</strong> @Model.Category.DisplayOrder</p>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Category.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Редактировать категорию">
                        <i class="fa-solid fa-pen-to-square"></i> Редактировать категорию
                    </a>
                </div>
            </div>
        </div>
    </div>
    <br /><br />

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary" style="margin-bottom: 0px;">Товары</h2>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a class="btn btn-success btn-create" asp-action="Create" asp-controller="Product" asp-route-categoryId="@Model.Category.Id">
                <i class="fa-solid fa-plus"></i>&nbsp; Добавить товар
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.DisplayOrder)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subCategory in Model.Products)
                {
                    <tr>
                        <td width="50%">@subCategory.Name</td>
                        <td width="50%">@subCategory.Price</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Product" asp-route-id="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Редактировать товар">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Product" asp-route-id="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Удалить товар">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Товаров нет</p>
    }

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" style="margin-bottom: 0px;">Под-категории</h2>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a class="btn btn-success btn-create" asp-action="Create" asp-controller="Category" asp-route-parentId="@Model.Category.Id">
                <i class="fa-solid fa-plus"></i>&nbsp; Добавить под-категорию
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Category.SubCategories != null && Model.Category.SubCategories.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.DisplayOrder)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subCategory in Model.Category.SubCategories)
                {
                    <tr>
                        <td width="50%">@subCategory.Name</td>
                        <td width="50%">@subCategory.DisplayOrder</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Category" asp-route-id="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Редактировать категорию">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Удалить категорию">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <a class="btn btn-secondary mx-2" asp-action="Create" asp-controller="Category" asp-route-parentId="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Добавить подкатегорию">
                                    <i class="fa-solid fa-layer-group"></i>
                                </a>
                                <a class="btn btn-info mx-2" asp-action="Details" asp-controller="Category" asp-route-id="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Подробнее">
                                    <i class="fa-solid fa-info-circle"></i>
                                </a>
                                <a class="btn btn-success mx-2" asp-action="Create" asp-controller="Product" asp-route-categoryId="@subCategory.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Добавить товар">
                                    <i class="fa-solid fa-plus"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Подкатегорий нет</p>
    }

    <br /><br />

    <div class="row">
        <div class="col-12 d-flex justify-content-start">
            @if (Model.Category.ParentId != null)
            {
                <a class="btn btn-secondary" asp-action="Details" asp-controller="Category" asp-route-id="@Model.Category.ParentId">
                    <i class="fas fa-sign-out-alt"></i> Назад
                </a>
            }
            else
            {
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Category">
                    <i class="fas fa-sign-out-alt"></i> Назад
                </a>
            }
        </div>
    </div>
</div>