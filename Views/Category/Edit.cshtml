@model Rolled_metal_products.Models.ViewModels.CreateCategoryVM


@{
    var title = "Редактирование категории";
    ViewData["Title"] = title;
}
<style>
    .form-group {
        padding: 10px;
    }

    .btn-delete-parametr {
        border-radius: 0 1rem 1rem 0;
    }

</style>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="container py-5">
        <input asp-for="Category.Id" hidden></input>
        @if (Model.Category.ParentId != null)
        {
            title = "Редактирование подкатегории";
            <input asp-for="Category.ParentId" hidden></input>
        }
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-info pl-3">@title</h2>
            </div>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Category.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Category.DisplayOrder"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Category.DisplayOrder" class="form-control" />
                            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            Изображение
                        </div>
                        <div class="col-8">
                            <input asp-for="Category.ImageName" hidden />
                            <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Параметры категории</label>
                        </div>
                        <div class="col-8">
                            <div id="parameters">
                                @foreach (var parameter in Model.Parameters)
                                {
                                    <div class="input-group mb-2">
                                        <input type="text" name="Parameters" class="form-control param-input" value="@parameter" />
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-danger btn-delete-parametr" onclick="removeParameter(this)">Удалить</button>
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="btn btn-primary" type="button" onclick="addParameter()">Добавить параметр</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" value="Редактировать" class="btn btn-success w-100"/>
                            </div>
                            <div class="col">
                                @if (Model.Category.ParentId != null)
                                {
                                    <a class="btn btn-info w-100" asp-action="Details" asp-controller="Category" asp-route-id="@Model.Category.ParentId"><i class="fas fa-sign-out-alt"></i> Назад к списку</a>
                                }
                                else
                                {
                                    <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i> Назад к списку</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3 offset-1 p-4">
                    @if (Model.Category.ImageName == null)
                    {
                        <img id="imagePreview" src="@WC.NoImagePath" width="100%" style="border-radius:5px; border: 1px solid #bbb" />
                    }
                    else
                    {
                        <img id="imagePreview" src="@WC.ImagePathCategory@Model.Category.ImageName" width="100%" style="border-radius:5px; border: 1px solid #bbb" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{


        <partial name="_ValidationScriptsPartial"></partial>


    }

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
        });
    </script>
    <script>
        function validateInput() {
            var nme = document.getElementById("uploadBox");
            if (nme.value.length == 0) {
                Swal.fire({
                    title: "Error!",
                    text: "Please upload an Image!",
                    icon: "error"
                });
                return false;
            }
            return true;
        }
    </script>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("img#imagePreview")
                        .attr("src", e.target.result)
                        .width(200)
                        .height(200);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#uploadBox").change(function () {
            readURL(this);
        });
    </script>

    <script>
        function addParameter() {
            var container = document.getElementById("parameters");
            var inputGroup = document.createElement("div");
            inputGroup.className = "input-group mb-2";

            var input = document.createElement("input");
            input.type = "text";
            input.name = "Parameters";
            input.className = "form-control param-input";

            var inputGroupAppend = document.createElement("div");
            inputGroupAppend.className = "input-group-append";

            var button = document.createElement("button");
            button.type = "button";
            button.className = "btn btn-danger btn-delete-parametr";
            button.innerText = "Удалить";
            button.onclick = function () { removeParameter(button); };

            inputGroupAppend.appendChild(button);
            inputGroup.appendChild(input);
            inputGroup.appendChild(inputGroupAppend);
            container.appendChild(inputGroup);
        }

        function removeParameter(button) {
            var container = document.getElementById("parameters");
            container.removeChild(button.parentElement.parentElement);
        }
    </script>

}
