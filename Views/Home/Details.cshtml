@model Rolled_metal_products.Models.ViewModels.DetailsVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<div class="">
    <form>
        <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000;">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;margin-left: 0; ">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @Model.Product.Price?.ToString("C")</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.ImageName" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush; color:black">@Model.Product.Category.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Product.Description) </p>
                                        @if (Model.Product.Width.HasValue)
                                        {
                                            <p><strong>Ширина:</strong> @Model.Product.Width?.ToString()</p>
                                        }
                                        @if (Model.Product.Diameter.HasValue)
                                        {
                                            <p><strong>Диаметр:</strong> @Model.Product.Diameter?.ToString()</p>
                                        }
                                        @if (Model.Product.Thickness.HasValue)
                                        {
                                            <p><strong>Толщина:</strong> @Model.Product.Thickness?.ToString()</p>
                                        }
                                        @if (Model.Product.ExternalDiameter.HasValue)
                                        {
                                            <p><strong>Наружный диаметр:</strong> @Model.Product.ExternalDiameter?.ToString()</p>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Product.Standard))
                                        {
                                            <p><strong>ГОСТ:</strong> @Model.Product.Standard</p>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Product.TypeOfAlloy))
                                        {
                                            <p><strong>Тип сплава:</strong> @Model.Product.TypeOfAlloy</p>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Product.Stamp))
                                        {
                                            <p><strong>Марка:</strong> @Model.Product.Stamp</p>
                                        }
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Назад к списку</a>
                        </div>
                        <div class="col-12 col-md-6 ">

                            @if (Model.ExistsInCart)
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Удалить из корзины</a>
                            }
                            else
                            {
                                <a asp-action="DetailsPost" asp-route-id="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Добавить в корзину</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



