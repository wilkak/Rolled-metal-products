@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Удалить личные данные";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="d-flex mb-4">
    <h3 class="text-primary fw-bold">@ViewData["Title"]</h3>
</div>

<div class="alert alert-warning" role="alert">
    <p class="mb-0">
        <strong>Удаление этих данных навсегда удалит ваш аккаунт, и это не может быть восстановлено.</strong>
    </p>
</div>

<div class="row">
    <div class="col-md-6">
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Пожалуйста, введите ваш пароль." />
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger shadow" type="submit">Удалить данные и закрыть мой аккаунт</button>
    </form>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
